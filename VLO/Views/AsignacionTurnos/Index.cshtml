@model IEnumerable<VLO.Models.AsignacionTurno>

@{
    ViewBag.Title = "Index";
}

<h2>Asignación de turnos</h2>

<p>
    @Html.ActionLink(" Nuevo", "Create", null, new { @class = "btn btn-success glyphicon glyphicon-plus" })
</p>
<div class="table-responsive">
    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Empleado.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Turnos.Nombre)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Empleado.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Turnos.Nombre)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.IdAsignacion }, new { @class = "btn btn-warning glyphicon glyphicon-refresh" }) | 
                    @Html.ActionLink(" ", "Delete", new { id = item.IdAsignacion }, new { @class = "btn btn-danger glyphicon glyphicon-trash" })
                </td>
            </tr>
        }

    </table>
</div>
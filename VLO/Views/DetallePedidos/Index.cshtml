@model IEnumerable<VLO.Models.DetallePedido>

@{
    ViewBag.Title = "Index";
}

<h2>Detalle de pedidos</h2>

<p>
    @Html.ActionLink(" Nuevo", "Create", null, new { @class = "btn btn-success glyphicon glyphicon-plus" })
</p>
<div class="table-responsive">
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Menu.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pedido.Cliente)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Menu.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pedido.Cliente)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id=item.IdDetalle }, new { @class = "btn btn-warning glyphicon glyphicon-refresh" })
            @Html.ActionLink(" ", "Delete", new { id=item.IdDetalle }, new { @class = "btn btn-danger glyphicon glyphicon-trash" })
        </td>
    </tr>
}

</table>
</div>
